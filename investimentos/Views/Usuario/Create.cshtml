@model PlataformaInvestimentos.Models.Usuario

@{
    ViewData["Title"] = "Criar Conta";
}

<link rel="stylesheet" href="~/css/loginecadastro.css" asp-append-version="true"/>

<div class="container-fluid create-wrapper d-flex align-items-center justify-content-center">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <h4 class="mt-3">Crie sua conta</h4>
            <p class="text-muted small">Cadastre-se para começar a usar a plataforma</p>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Login" class="form-label">Usuário</label>
                <input asp-for="Login" class="form-control" placeholder="Escolha um nome de usuário" required=""/>
                <span asp-validation-for="Login" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SenhaTexto" class="form-label">Senha</label>
                <input asp-for="SenhaTexto" type="password" class="form-control" placeholder="••••••••" required=""/>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarSenha" class="form-label">Confirmar Senha</label>
                <input asp-for="ConfirmarSenha" type="password" class="form-control" placeholder="••••••••" required />
                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-2">
                <input type="submit" value="Criar Conta" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <small>Já tem uma conta? <a href="/Usuario/Login" class="text-decoration-none">Entrar</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

