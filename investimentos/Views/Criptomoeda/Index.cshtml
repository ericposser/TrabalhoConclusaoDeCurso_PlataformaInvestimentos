@model IEnumerable<PlataformaInvestimentos.Models.Criptomoeda>
@{
    ViewData["Title"] = "Minhas Criptomoedas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">
            <i data-lucide="circle-dollar-sign" class="me-2" style="width: 1em; height: 1em;"></i> Minhas Criptomoedas
        </h3>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
            <i data-lucide="plus-circle" class="me-1"></i> Adicionar Criptomoeda
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.NomeSort"
                       class="text-decoration-none text-dark d-inline-flex align-items-center gap-1">
                        <i data-lucide="type"></i>
                        <span>Nome</span>
                        @if (ViewBag.NomeSort == "Nome") { <i data-lucide="chevron-down"></i> }
                        else if (ViewBag.NomeSort == "nome_desc") { <i data-lucide="chevron-up"></i> }
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.PrecoSort"
                       class="text-decoration-none text-dark d-inline-flex align-items-center gap-1">
                        <i data-lucide="dollar-sign"></i>
                        <span>Valor Total</span>
                        @if (ViewBag.PrecoSort == "Preco") { <i data-lucide="chevron-down"></i> }
                        else if (ViewBag.PrecoSort == "preco_desc") { <i data-lucide="chevron-up"></i> }
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.QuantidadeSort"
                       class="text-decoration-none text-dark d-inline-flex align-items-center gap-1">
                        <i data-lucide="hash"></i>
                        <span>Quantidade</span>
                        @if (ViewBag.QuantidadeSort == "Quantidade") { <i data-lucide="chevron-down"></i> }
                        else if (ViewBag.QuantidadeSort == "quantidade_desc") { <i data-lucide="chevron-up"></i> }
                    </a>
                </th>
                <th><i data-lucide="trash-2"></i> Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.PrecoAtual.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</td>
                    <td>@item.Quantidade.ToString("N8", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                    <td>
                        <button type="button" class="btn btn-outline-danger btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#modalExcluir@(item.Id)">
                            <i data-lucide="trash-2" class="me-1" style="width:16px; height:16px;"></i> Excluir
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="modalExcluir@(item.Id)" tabindex="-1" aria-labelledby="modalLabel@(item.Id)" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content rounded-3 shadow-sm">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title" id="modalLabel@(item.Id)">
                                            <i data-lucide="trash-2" class="me-2"></i> Confirmar Venda
                                        </h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="alert alert-warning small d-flex align-items-start">
                                            <i data-lucide="alert-triangle" class="me-2 mt-1"></i>
                                            <div>Você está prestes a <strong>vender parte ou toda</strong> esta criptomoeda. Informe os dados da venda.</div>
                                        </div>
                                        <form id="formDelete@(item.Id)" asp-action="Delete" asp-route-id="@item.Id" method="post" class="form-venda-cripto">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="Ticker" value="@item.Ticker" />

                                            <div class="mb-3">
                                                <label class="form-label">Quantidade</label>
                                                <input type="text" class="form-control quantidade-input" name="quantidade"
                                                       inputmode="decimal"
                                                       id="quantidadeInput@(item.Id)"
                                                       value="@item.Quantidade.ToString("F8", System.Globalization.CultureInfo.InvariantCulture)"
                                                       required />
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Preço de Venda (Por unidade)</label>
                                                <input type="text" class="form-control preco-input" name="preco"
                                                       inputmode="decimal"
                                                       data-ticker="@item.Ticker"
                                                       data-precoatual="@item.PrecoAtual.ToString("F8", System.Globalization.CultureInfo.InvariantCulture)"
                                                       required />
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-danger">
                                                    <i data-lucide="trash" class="me-1"></i> Confirmar Venda
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        // Função reutilizável para mostrar toasts de feedback
        function showFeedbackToast(text, color) {
            const duration = 3000;
            const toast = Toastify({
                text: text,
                duration: duration,
                gravity: "top",
                position: "right",
                backgroundColor: color,
                close: true,
                stopOnFocus: true
            }).showToast();

            // Adiciona a barra de progresso
            if (toast.toastElement) {
                const progress = document.createElement("div");
                progress.classList.add("progress-bar");
                progress.style.animationDuration = duration + "ms";
                toast.toastElement.appendChild(progress);
            }
        }

        // Função para formatar o campo de preço (máscara visual)
        function handlePriceInputFormatting() {
            let raw = $(this).val().replace(/[^\d]/g, '');
            if (raw === '') {
                $(this).val('');
                return;
            }
            if (raw.length < 3) raw = raw.padStart(3, '0');

            let valorNumerico = parseFloat(raw) / 100;

            let valorFormatado = new Intl.NumberFormat('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            }).format(valorNumerico);

            $(this).val(valorFormatado);
        }

        // Versão mais segura da sua função de submit
        function handleFormSubmission(e) {
            const $form = $(this);
            const $precoInput = $form.find('.preco-input');
            const $quantidadeInput = $form.find('.quantidade-input');

            let precoValor = $precoInput.val();
            let quantidadeValor = $quantidadeInput.val();

            let precoParaEnvio = precoValor
                .replace('R$', '')
                .replace(/\./g, '')
                .replace(/\s/g, '');

            let quantidadeParaEnvio = quantidadeValor.replace('.', ',').trim();

            // --- Validações mais seguras ---
            let quantidadeParaValidar = parseFloat(quantidadeParaEnvio.replace(',', '.'));
            let precoParaValidar = parseFloat(precoParaEnvio.replace(',', '.'));

            // Verificação de segurança para o data attribute
            const quantidadeDisponivelAttr = $quantidadeInput.data('disponivel');
            if (quantidadeDisponivelAttr) {
                let quantidadeDisponivel = parseFloat(quantidadeDisponivelAttr.toString().replace(',', '.'));
                if (!isNaN(quantidadeDisponivel) && quantidadeParaValidar > quantidadeDisponivel) {
                    alert('Você não pode vender uma quantidade maior do que a que possui!');
                    e.preventDefault();
                    return;
                }
            }

            if (isNaN(quantidadeParaValidar) || quantidadeParaValidar <= 0) {
                alert('Quantidade inválida!');
                e.preventDefault();
                return;
            }
            if (isNaN(precoParaValidar) || precoParaValidar <= 0) {
                alert('Preço inválido!');
                e.preventDefault();
                return;
            }

            $precoInput.val(precoParaEnvio);
            $quantidadeInput.val(quantidadeParaEnvio);
        }

        // Função principal que roda quando a página carrega
        $(document).ready(function () {
            // ... (nenhuma mudança aqui, apenas vincular os eventos e mostrar os toasts)
            lucide.createIcons();
            $('.preco-input').on('input', handlePriceInputFormatting);
            $('form.form-venda-cripto').on('submit', handleFormSubmission);

            const sucesso = '@TempData["Sucesso"]';
            const removido = '@TempData["Removido"]';

            if (sucesso && sucesso.toLowerCase() === 'true') {
                showFeedbackToast("Criptomoeda adicionada com sucesso!", "#198754");
            }
            if (removido && removido.toLowerCase() === 'true') {
                showFeedbackToast("Venda realizada com sucesso!", "#dc3545");
            }
        });
    </script>
}